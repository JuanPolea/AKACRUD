<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_user_create_content"
    tools:context="activity.com.jfmr.akacrud.fragment.UserCreateFragment"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >
    <TextView
        android:id="@+id/ivTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standar"
        android:text="@string/name_title"
        android:layout_below="@id/idIvCreateUserImage"
        style="@style/Title"
        />


    <EditText
        android:id="@+id/idEtNameResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insert_name"
        android:layout_alignBaseline="@+id/ivTvName"
        android:layout_alignBottom="@+id/ivTvName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ivTvName"
        android:layout_toEndOf="@+id/ivTvName"
        android:layout_marginEnd="@dimen/margin_standar"
        android:layout_marginRight="@dimen/margin_standar"/>

    <TextView
        android:id="@+id/idTvDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivTvName"
        android:layout_marginTop="@dimen/margin_standar"
        android:text="@string/date_of_birth_title"
        android:layout_margin="@dimen/margin_standar"
        style="@style/Title"/>

    <TextView
        android:id="@+id/idTvDateOfBirthResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/idIvDateOfBirth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/idEtNameResult"
        android:layout_alignStart="@+id/idEtNameResult" />

    <ImageView
        android:id="@+id/idIvDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        android:layout_below="@+id/idTvDateOfBirth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_standar"/>


    <TextView
        android:id="@+id/idTvTimeOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idIvDateOfBirth"
        android:text="@string/hour_birth_title"
        android:layout_margin="@dimen/margin_standar"
        style="@style/Title"/>
    <ImageView
        android:id="@+id/idIvTimeOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        android:layout_below="@+id/idTvTimeOfBirth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_standar"
        android:layout_marginBottom="@dimen/margin_standar"/>
    <TextView
        android:id="@+id/idTvTimeOfBirthResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="14dp"
        android:layout_alignTop="@+id/idIvTimeOfBirth"
        android:layout_alignLeft="@+id/idTvDateOfBirthResult"
        android:layout_alignStart="@+id/idTvDateOfBirthResult" />

    <ImageView
        android:id="@+id/ivIvAcept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_accept"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/idIvTimeOfBirth"
        android:layout_alignRight="@+id/idEtNameResult"
        android:layout_alignEnd="@+id/idEtNameResult" />


</RelativeLayout>